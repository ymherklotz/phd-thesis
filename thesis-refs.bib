@article{mcdowell02_reason_higher_order_abstr_syntax_logic_framew,
	author = {McDowell, Raymond C. and Miller, Dale A.},
	title = {Reasoning with Higher-Order Abstract Syntax in a Logical Framework},
	year = {2002},
