	author = {Oliveira Vale, Arthur and Melli\`{e}s, Paul-Andr\'{e} and Shao, Zhong and Koenig, J\'{e}r\'{e}mie and Stefanesco, L\'{e}o},
	title = {Layered and Object-Based Game Semantics},
