@inproceedings{allamigeon23_formal_dispr_hirsc_conjec,
	author = {Allamigeon, Xavier and Canu, Quentin and Strub, Pierre-Yves},
	title = {A Formal Disproof of Hirsch Conjecture},
	year = {2023},
	isbn = {9798400700262},
